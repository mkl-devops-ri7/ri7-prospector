{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block body %}
    {{ form_start(form, { 'attr': { 'class' : 'max-w-md mx-auto bg-white' }}) }}
        <!--
    // v0 by Vercel.
    // https://v0.dev/t/ASBX0xh7xXJ
    -->
        <div class="bg-card text-card-foreground w-full max-w-lg" data-v0-t="card">
            <div class="flex flex-col space-y-1.5 p-6">
                <h3 class="text-2xl font-semibold leading-none tracking-tight">{{ 'User Profile'|trans }}</h3>
                <p class="text-sm text-muted-foreground">{{ 'Update your profile information.'|trans }}</p>
            </div>
            <div class="p-6 space-y-4">
                <div class="grid grid-cols-2 gap-4">
                    <div class="space-y-2">
                        {{ form_label(form.firstname, 'Firstname',  { 'label_attr' : { 'class': 'text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70'} }) }}
                        {{ form_widget(form.firstname, { 'attr': { 'class': 'flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50'} }) }}
                    </div>
                    <div class="space-y-2">
                        {{ form_label(form.lastname, 'Lastname',  { 'label_attr' : { 'class': 'text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70'} }) }}
                        {{ form_widget(form.lastname, { 'attr': { 'class': 'flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50'} }) }}
                    </div>
                </div>

                <div class="space-y-2">
                    {{ form_label(form.email, 'Email',  { 'label_attr' : { 'class': 'text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70'} }) }}
                    {{ form_widget(form.email, { 'attr': { 'class': 'flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50'} }) }}
                </div>

                <div class="space-y-2">
                    {{ form_label(form.linkedinProfilUrl, 'LinkedIn Profile URL',  { 'label_attr' : { 'class': 'text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70'} }) }}
                    {{ form_widget(form.linkedinProfilUrl, { 'attr': { 'class': 'flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50'} }) }}
                </div>
            </div>
            <div class="flex items-center p-6">
                <button
                    class="inline-flex items-center gap-2 rounded border border-teal-600 bg-teal-600 px-8 py-3 text-white hover:bg-transparent hover:text-indigo-600 focus:outline-none focus:ring active:text-indigo-500">
                    {{ 'Save'|trans }}
                </button>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
